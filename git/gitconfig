[alias]
	st = status
	ci = commit
	br = branch
	co = checkout
	amend = commit --amend
	amendne = commit --amend --no-edit
	lol = log --graph --decorate --pretty=oneline --abbrev-commit --all
	ls = ls-files
	resetlastcommit = reset --soft HEAD~1

